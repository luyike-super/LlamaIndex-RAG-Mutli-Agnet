# LlamaKB环境变量配置示例
# 复制此文件为.env并填入相应的值

# ===============================================================
# 大语言模型API配置
# ===============================================================

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo

# 千问API配置
QIANWEN_API_KEY=your_qianwen_api_key
QIANWEN_API_BASE=https://dashscope.aliyuncs.com/api/v1
QIANWEN_MODEL=qwen-turbo

# DeepSeek配置
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_API_BASE=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# ===============================================================
# 嵌入模型配置
# ===============================================================

# DashScope嵌入模型配置
DASHSCOPE_API_KEY=your_dashscope_api_key
DASHSCOPE_EMBEDDING_MODEL=text-embedding-v2

# OpenAI嵌入模型配置
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# ===============================================================
# 系统配置
# ===============================================================

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/llamakb.log

# 文档配置
DOCUMENT_INPUT_DIR=data
DOCUMENT_RECURSIVE=True

# 索引配置
INDEX_STORAGE_DIR=store/indices
INDEX_CHUNK_SIZE=1024
INDEX_CHUNK_OVERLAP=200

# 缓存配置
CACHE_DIR=store/cache

# ===============================================================
# 应用配置
# ===============================================================

# API服务配置
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False 